{
  "name": "column-resizer-monorepo",
  "version": "0.0.1",
  "description": "An intuitive React component set for multi-column resizing",
  "license": "MIT",
  "private": true,
  "repository": "github:Runjuu/react-simple-resizer",
  "bugs": "https://github.com/Runjuu/react-simple-resizer/issues",
  "homepage": "https://github.com/Runjuu/react-simple-resizer#readme",
  "author": "Runjuu",
  "keywords": [
    "react",
    "resize",
    "resizer",
    "multi-column"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "turbo run build",
    "build:pkgs": "turbo run build --filter=@column-resizer/*",
    "build:release": "turbo run build:release --force",
    "bump-version": "bumpp package.json packages/*/package.json examples/*/package.json",
    "clean": "turbo run clean",
    "format": "run-p format:code format:package",
    "format:code": "prettier '@(packages|examples)/**/*.@(ts|tsx|html|json)' --write",
    "format:package": "format-package 'package.json' -w -c format-package.json",
    "lint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "prepare": "husky install",
    "release": "run-s build:release bump-version",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*.{ts,tsx,less,html}": [
      "prettier --write"
    ]
  },
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "format-package": "^7.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "tslib": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4"
  }
}
